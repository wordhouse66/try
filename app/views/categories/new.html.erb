<h1>Create a category</h1>

<div class='row'>
  <div class='col-md-12'>
    <%= form_for @category do |f| %>
      <%= render 'shared/errors', obj: @category %>
      
      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= f.label :name %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name of category' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-10'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>