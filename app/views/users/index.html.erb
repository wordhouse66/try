<h1 align='center'>All Alpha Bloggers</h1>
<div align='center'>
  <% @users.each do |user| %>
    <ul class='listing'>
      <div class='row'>
        <div class='col-md-4 offset-md-4'>
          <div class='card' style="margin-bottom: 2rem;">
            <div class="card-body">
              <li>
                <%= link_to gravatar_for(user), user_path(user) %>
              </li>
              <li class='article-title'>
                <%= link_to user.username.capitalize, user_path(user) %>
              </li>
              <li>
                <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
              </li>
              <% if logged_in? && current_user.admin? %>
                <li>
                  <%= link_to 'Delete this user', user_path(user), class: 'btn btn-sm btn-danger' , turbo_method: :delete, data: {turbo_confirm: "Are you sure?" } %>
                </li>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </ul>
  <% end %>
</div>

<div align='center'>
  <%= will_paginate @users %>
</div>