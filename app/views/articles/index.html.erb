<h1>Listing all Articles</h1>

<p>
  <%= link_to "New article", new_article_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to "Show this article", article %></td>
      <td><%= link_to "Edit this article", edit_article_path(article) %></td>
      <td><%= button_to 'Delete', article, method: :delete, data: {confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

